<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.deepai.evillage.controller.fragment.MineFragment">
    <RelativeLayout
        android:id="@+id/mine_detail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/background_title">
        <ImageView
            android:id="@+id/detail_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@color/white"
            android:src="@drawable/morentouxiang"
            android:contentDescription="@string/app_name"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:src="@drawable/circle"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/detail_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:maxLines="1"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/mine_clean"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/mine_clean"
        android:textColor="@color/text_black"
        android:textSize="@dimen/mine_textsize"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/pkhxq_left_gap"
        android:layout_marginRight="@dimen/pkhxq_right_gap"
        android:background="@color/background_cutoff"/>
    <TextView
        android:id="@+id/mine_about"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/mine_about"
        android:textColor="@color/text_black"
        android:textSize="@dimen/mine_textsize"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/pkhxq_left_gap"
        android:layout_marginRight="@dimen/pkhxq_right_gap"
        android:background="@color/background_cutoff"/>
    <TextView
        android:id="@+id/mine_logout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/mine_logout"
        android:textSize="@dimen/mine_textsize"
        android:textColor="@color/text_white"
        android:layout_margin="10dp"
        android:background="@color/background_tab"
        android:layout_gravity="center"
        android:gravity="center"/>
</LinearLayout>
