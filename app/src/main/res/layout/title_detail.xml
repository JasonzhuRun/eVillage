<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/title_backgroud">
    <TextView
        android:id="@+id/detail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/detail_photo"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/text_white"
        android:contentDescription="@string/app_name"/>
    <LinearLayout
        android:id="@+id/detail_text"
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/detail_photo"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detail_text_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:maxLines="1"
            android:text="@string/pkh_bfdx"/>
        <TextView
            android:id="@+id/detail_text_phone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:maxLines="1"
            android:text="@string/pkh_jbxx_lxdh"/>
        <TextView
            android:id="@+id/detail_text_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:maxLines="1"
            android:text="@string/pkh_jbxx_jzdz"/>
    </LinearLayout>
</RelativeLayout>