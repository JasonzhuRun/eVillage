<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pkhxq_top_gap"
        android:paddingBottom="@dimen/pkhxq_bottom_gap"
        android:paddingLeft="@dimen/pkhxq_left_gap"
        android:paddingRight="@dimen/pkhxq_right_gap">
        <TextView    android:minEms="6"
            android:id="@+id/zcmx_xmmc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tz_zcmx_xmmc"
            android:textSize="@dimen/pkhxq_title_textsize"/>
        <EditText
            android:id="@+id/zcmx_xmmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zcmx_xmmc_title"
            android:layout_marginLeft="@dimen/pkhxq_text_gap"
            android:textSize="@dimen/pkhxq_content_textsize"
            android:background="@drawable/edit_text_backgroud"
            android:focusable="false"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/pkhxq_left_gap"
        android:layout_marginRight="@dimen/pkhxq_right_gap"
        android:background="@color/background_cutoff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pkhxq_top_gap"
        android:paddingBottom="@dimen/pkhxq_bottom_gap"
        android:paddingLeft="@dimen/pkhxq_left_gap"
        android:paddingRight="@dimen/pkhxq_right_gap">
        <TextView    android:minEms="6"
            android:id="@+id/zcmx_dkyt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tz_zcmx_dkyt"
            android:textSize="@dimen/pkhxq_title_textsize"/>
        <EditText
            android:id="@+id/zcmx_dkyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zcmx_dkyt_title"
            android:layout_marginLeft="@dimen/pkhxq_text_gap"
            android:textSize="@dimen/pkhxq_content_textsize"
            android:background="@drawable/edit_text_backgroud"
            android:focusable="false"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/pkhxq_left_gap"
        android:layout_marginRight="@dimen/pkhxq_right_gap"
        android:background="@color/background_cutoff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pkhxq_top_gap"
        android:paddingBottom="@dimen/pkhxq_bottom_gap"
        android:paddingLeft="@dimen/pkhxq_left_gap"
        android:paddingRight="@dimen/pkhxq_right_gap">
        <TextView    android:minEms="6"
            android:id="@+id/zcmx_zcyf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tz_zcmx_zcyf"
            android:textSize="@dimen/pkhxq_title_textsize"/>
        <EditText
            android:id="@+id/zcmx_zcyf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zcmx_zcyf_title"
            android:layout_marginLeft="@dimen/pkhxq_text_gap"
            android:textSize="@dimen/pkhxq_content_textsize"
            android:background="@drawable/edit_text_backgroud"
            android:focusable="false"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/pkhxq_left_gap"
        android:layout_marginRight="@dimen/pkhxq_right_gap"
        android:background="@color/background_cutoff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pkhxq_top_gap"
        android:paddingBottom="@dimen/pkhxq_bottom_gap"
        android:paddingLeft="@dimen/pkhxq_left_gap"
        android:paddingRight="@dimen/pkhxq_right_gap">
        <TextView    android:minEms="6"
            android:id="@+id/zcmx_zcjey_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tz_zcmx_zcjey"
            android:textSize="@dimen/pkhxq_title_textsize"/>
        <EditText
            android:id="@+id/zcmx_zcjey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zcmx_zcjey_title"
            android:layout_marginLeft="@dimen/pkhxq_text_gap"
            android:textSize="@dimen/pkhxq_content_textsize"
            android:background="@drawable/edit_text_backgroud"
            android:focusable="false"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_cutoff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/background_cutoff"/>
</LinearLayout>